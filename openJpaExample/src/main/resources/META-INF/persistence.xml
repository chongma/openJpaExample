	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="openJpaExample">
		<class>com.example.openJpaExample.entities.Invoice</class>
		<class>com.example.openJpaExample.entities.InvoiceItem</class>
		<properties>
